{
  "name": "devcamper_api",
  "version": "1.0.0",
  "description": "DevCamper Backend API",
  "main": "server.js",
  "engines": {
    "node": ">=12.13.0",
    "npm": ">=6.12.0",
    "yarn": ">=1.19.1"
  },
  "scripts": {
    "start": "NODE_ENV=production node server",
    "dev": "nodemon server",
    "seed": "node seeder -d && node seeder -i && npm run dev",
    "lint:check": "eslint ./",
    "lint:fix": "eslint ./ --fix"
  },
  "author": "Aladdin Sonni",
  "license": "MIT",
  "dependencies": {
    "@sentry/node": "5.11.0",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.1.6",
    "express-mongo-sanitize": "^1.3.2",
    "express-rate-limit": "^5.0.0",
    "gravatar": "^1.8.0",
    "helmet": "^3.21.2",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.8.6",
    "morgan": "^1.9.1",
    "node-geocoder": "^3.25.0",
    "nodemailer": "^6.4.2",
    "slugify": "^1.3.6",
    "validator": "^12.1.0",
    "xss-clean": "^0.1.1"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.19.1",
    "husky": "^4.0.3",
    "lint-staged": "^9.5.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1"
  }
}
